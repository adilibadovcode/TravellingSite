@using TravellingSite.ViewModel.DestinationVM
@model DestinationCreateVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <form asp-action="Create" method="post">

        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" placeholder="Enter Title">
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" placeholder="Enter Price">
        </div>
        <div class="form-group">
            <label asp-for="StarCount"></label>
            <input asp-for="StarCount" class="form-control" placeholder="Enter StarCount">
        </div>
        <div class="form-group">
            <label asp-for="Image"></label>
            <input asp-for="Image" accept="image/*" class="form-control" placeholder="Enter StarCount">
        </div>
        

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

